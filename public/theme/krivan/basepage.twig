<!doctype html>
<html lang="{{ htmllang() }}">
    <head>
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        {% block title %}
        <title>{% if record.title is defined %}{{ record.title|striptags }} - {% endif %}{{ app.config.get('general/sitename') }}</title>
        {% endblock %}
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="{{ paths.theme }}css/krivan.css"/>
        {% endblock %}


        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
        {% endblock %}


        <!--[if lt IE 9]>
                <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>

    <body>
        {% include '_menu.twig' %}

        {% block body %}
            
        {% endblock %}
        
        <script>
        {% block scripts %}
            function controleerGrootte() {
                $hoogtevenster = $(window).outerHeight();
                $hoogtenav = $('.menu').outerHeight();
                $hoogtemidden = $('.content').outerHeight();
                $hoogtefooter = $('footer').outerHeight();
                console.log("Hoogte venster" + $hoogtevenster);
                console.log("Hoogte nav" + $hoogtenav);
                console.log("Hoogte midden" + $hoogtemidden);
                console.log("Hoogte footer" + $hoogtefooter);
                if (($hoogtefooter + $hoogtemidden + $hoogtenav) < $hoogtevenster) {
                    /*$hoogtemidden = $hoogtevenster - $hoogtenav - $hoogtefooter;
                     console.log("nieuwe hoogte midden : " + $hoogtemidden);
                     $('.content').outerHeight($hoogtemidden);*/
                    $('footer').removeClass('flexibel');
                } else {
                    $('footer').addClass('flexibel');
                    //$('.content').css('height','auto');
                }
            }
            $(document).ready(function () {
                controleerGrootte();
            })
            $(window).resize(function () {
                controleerGrootte();
            })
            $(window).load(function () {

                controleerGrootte();
            })
        {% endblock %}
        </script>
